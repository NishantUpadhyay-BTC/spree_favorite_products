<% if @users.empty? && @favorited_variants.empty? %>
  <div class="no-objects-found">
    <%= Spree.t(:no_results) %>
  </div>
<% else %>
  <table class="table table-striped" id="listing_favorite_products_users">
    <thead>
      <tr data-hook="admin_products_index_headers">
        <th><%= Spree.t(:email) %></th>
        <th><%= Spree.t(:sku) %></th>
        <th data-hook="admin_users_index_header_actions" class="actions text-right"> <%= Spree.t(:action) %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr id="<%= spree_dom_id user %>" data-hook="admin_users_index_rows">
          <td class='user_email'><%=link_to user.email, edit_admin_user_url(user) %></td>
          <td> <%= @product.sku %> </td>
          <td data-hook="admin_users_index_row_actions" class="actions actions-2 text-right">
            <%= link_to_edit user,{ no_text: true, url: edit_admin_user_path(id: user) } %>
            <%= link_to_delete user, no_text: true, url: admin_favorite_product_path(id: user.favorites.where(favoritable_id: @product.id, favoritable_type: 'Spree::Product').first) %>
          </td>
        </tr>
      <% end %>

      <% @favorited_variants.each do |variant| %>
        <%= render partial: 'spree/admin/favorite_products/favorite_variant_users', locals: { users: variant.favorite_users, variant: variant } %>
      <% end %>

    </tbody>
  </table>
<% end %>
