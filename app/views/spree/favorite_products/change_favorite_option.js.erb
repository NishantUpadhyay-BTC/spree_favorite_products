<% if @favorite %>
  $('.favorite_link').attr('href', '<%= favorite_product_path(id: params[:id], type: params[:type]) %>').data('method', 'delete').text('<%= Spree.t(:unmark_as_favorite) %>')
<% else %>
  $('.favorite_link').attr('href', '<%= favorite_products_path(id: params[:id], type: params[:type]) %>').data('method', 'post').text('<%= Spree.t(:mark_as_favorite) %>')
<% end %>